    "jest-enzyme": "^7.1.0",
    "lodash": "^4.17.15",
    "minimatch": "^3.0.4",
    "module-alias": "^2.2.0",
    "react-redux": "^7.1.1",
    "react-scripts": "3.1.1",
    "redux": "^4.0.4",
